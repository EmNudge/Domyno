{
  "compilerOptions": {
    "target": "es6",
    "module": "esNext",
    "lib": [
      "es6",
      "dom"
    ],
    "typeRoots": [],
    "rootDir": "./",
    "types": [
      "jest"
    ],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "skipLibCheck": true,
    "declarationDir": "./types",
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": ["tests/"]
}
